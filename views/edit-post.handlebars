<article>
  <a href="/dashboard" class="is-pull-right"> &larr; Back to dashboard</a>
  <h2 class="sports_title mt-5">Edit Post</h2>
  <form class="edit-post-form">
    <div>
      <label for="post-sports_title">Post Sports Title</label>
      <input class="input" name="post-sports_title" type="text" value="{{post.sports_title}}"/>
      
    </div>
    <div>
      <label for="post-comments">create post here</label>
      <input class="textarea" name="post-comments" type="text" value="{{post.post_comments}}"/>
    </div>
    <div class="is-pulled-right">
     created by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit"class="btn is-success">Save post</button>
    <button type="button" class="btn is-danger delete-post-btn">Delete post</button>
  </form>
</article>


{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>